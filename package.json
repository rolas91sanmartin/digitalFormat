{
  "name": "format-printer-ia",
  "version": "1.0.3",
  "description": "Aplicaci√≥n para reconocer y recrear formularios de documentos con IA",
  "main": "dist/main/main/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json && electron . --dev",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "package": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "form",
    "ocr",
    "ia",
    "printer"
  ],
  "author": "rolas91sanmartin",
  "license": "MIT",
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.296",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "sharp": "^0.34.4",
    "sweetalert2": "^11.26.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/sharp": "^0.31.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-re": "^1.3.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.formatprinter.app",
    "productName": "FormatPrinter IA",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/bcrypt/**/*",
      "node_modules/sharp/**/*"
    ],
    "extraResources": [],
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "rolas91sanmartin",
        "repo": "digitalFormat",
        "private": false,
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
